#!/bin/bash
{% if walg_aws_endpoint|length  %}
export AWS_ENDPOINT={{ walg_aws_endpoint  }}
{% endif %}

export WALG_S3_PREFIX={{ walg_s3_prefix }}
export AWS_ACCESS_KEY_ID={{ walg_aws_access_key_id }}
export AWS_SECRET_ACCESS_KEY={{ walg_aws_secret_access_key }}
export AWS_S3_FORCE_PATH_STYLE="true"
export AWS_REGION={{ walg_aws_region }}

export PGHOST=/var/run/postgresql
export PGUSER=postgres

wal-g backup-push {{ postgresql_data_directory }} >> /var/log/postgresql/walg_base_backup.log 2>&1

